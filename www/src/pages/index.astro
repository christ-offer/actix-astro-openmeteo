---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Welcome to Astro.">
	<main>
		<h1>
			<span class="text-gradient">Welcome my playground.</span>
		</h1>
		<p class="instructions">
			<strong>Get started by editing <code>src/pages/index.astro</code></strong>
			<br />
			<em>and save to reload.</em>
		</p>
	</main>
</Layout>
<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 80rem;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
</style>
